{
    "artifactStructure": {
        "assets": [
            {
                "root": "assets"
            }
        ],
        "hbsTemplates": [
            { 
                "root": "static_templates",
                "pattern": "*.hbs"
            },
            { 
                "root": "partials",
                "pattern": "*.hbs"
            }
        ]
    },
    "buildArtifacts": {
        "buildSetupCmd": "./ci/build_setup.sh",
        "buildCmd": "./ci/build.sh"
    },
    "livePreview": {
        "serveSetupCmd": "./ci/serve_setup.sh",
        "serveCmd": "./ci/serve.sh"
    },
    "dependencies": {
      "installDepsCmd": "./ci/install_deps.sh",
      "requiredFiles": [
        "package.json",
        "package-lock.json",
        "ci/install_deps.sh"
      ]
    }
}